<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MediaAlbum.WrapContent.WidthMatchParent"
    android:background="?selectableItemBackground"
    android:padding="@dimen/media_dp_10">

    <ImageView
        android:id="@+id/iv_gallery_preview_image"
        android:layout_width="@dimen/media_dp_80"
        android:layout_height="@dimen/media_dp_80"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/media_title"
        android:scaleType="centerCrop"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rb_gallery_preview_check"
        style="@style/MediaAlbum.WrapContent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"/>

    <TextView
        android:id="@+id/tv_gallery_preview_title"
        style="@style/MediaAlbum.WrapContent.WidthMatchParent"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/media_dp_10"
        android:layout_marginLeft="@dimen/media_dp_10"
        android:layout_marginRight="@dimen/media_dp_10"
        android:layout_marginStart="@dimen/media_dp_10"
        android:layout_toEndOf="@id/iv_gallery_preview_image"
        android:layout_toLeftOf="@id/rb_gallery_preview_check"
        android:layout_toRightOf="@id/iv_gallery_preview_image"
        android:layout_toStartOf="@id/rb_gallery_preview_check"
        android:ellipsize="end"
        android:maxLines="1"/>

</RelativeLayout>